<Page
    x:Class="Covid19Dashboard.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <VariableSizedWrapGrid Orientation="Horizontal" Margin="20,20,0,0" ItemWidth="320">
            <Button Width="310" Height="230">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                            <Run Text="Dernière mise à jour : " />
                            <Run Text="{x:Bind ViewModel.DailyConfirmedNewCaseLastUpdate, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock Text="Nombre de nouveaux cas déclarés" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Center" />
                        <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">
                            <Run Text="{x:Bind ViewModel.DailyConfirmedNewCase, Mode=OneWay}" />
                            <Run Text="nouveaux cas quotidien" />
                        </TextBlock>
                        <HyperlinkButton Content="Voir plus de détail" VerticalContentAlignment="Bottom" Margin="0,65,0,0" Click="NewCasesHyperlinkButton_Click"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </VariableSizedWrapGrid>
    </Grid>
</Page>
