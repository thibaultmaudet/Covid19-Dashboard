<Page
    x:Class="Covid19Dashboard.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <StackPanel Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <TextBlock x:Uid="Home_EpidemiologyDataTitle" Style="{StaticResource SubtitleTextBlockStyle}" Margin="20,10,0,5"/>
        <VariableSizedWrapGrid Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,5,0,0">
            <GridView ItemsSource="{x:Bind ViewModel.EpidemiologyDataTiles, Mode=OneWay}">
                <GridView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource GridViewItemRevealStyle}" TargetType="GridViewItem">
                        <Style.Setters>
                            <Setter Property="Margin" Value="5" />
                        </Style.Setters>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Button Width="310" Height="230">
                            <Button.Content>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                        <Run x:Uid="Home_LastUpdate" />
                                        <Run Text="{Binding LastUpdate}" />
                                    </TextBlock>
                                    <TextBlock Text="{Binding Title}" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding FullDescription}" Margin="0,10,0,0" TextWrapping="Wrap" />
                                    <HyperlinkButton x:Uid="Home_SeeMoreDetails" VerticalContentAlignment="Bottom" Margin="0,65,0,0" Click="MoreDetailsHyperlinkButton_Click" CommandParameter="{Binding Tag}" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </VariableSizedWrapGrid>
        <TextBlock x:Uid="Home_HospitalDataTitle" Style="{StaticResource SubtitleTextBlockStyle}" Margin="20,5,0,5"/>
        <VariableSizedWrapGrid Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,5,0,0">
            <GridView ItemsSource="{x:Bind ViewModel.HospitalDataTiles, Mode=OneWay}">
                <GridView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource GridViewItemRevealStyle}" TargetType="GridViewItem">
                        <Style.Setters>
                            <Setter Property="Margin" Value="5" />
                        </Style.Setters>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Button Width="310" Height="230">
                            <Button.Content>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                                        <Run x:Uid="Home_LastUpdate" />
                                        <Run Text="{Binding LastUpdate}" />
                                    </TextBlock>
                                    <TextBlock Text="{Binding Title}" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding FullDescription}" Margin="0,10,0,0" TextWrapping="Wrap" />
                                    <HyperlinkButton x:Uid="Home_SeeMoreDetails" VerticalContentAlignment="Bottom" Margin="0,65,0,0" Click="MoreDetailsHyperlinkButton_Click" CommandParameter="{Binding Tag}" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </VariableSizedWrapGrid>
    </StackPanel>
</Page>
