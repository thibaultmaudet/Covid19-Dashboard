<UserControl
    x:Class="Covid19Dashboard.Controls.TileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Covid19Dashboard.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="230"
    d:DesignWidth="310">

    <Grid>
        <Button Height="230" Width="310">
            <Button.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}">
                        <Run x:Uid="Tile_LastUpdate" />
                        <Run Text="{x:Bind DataTile.LastUpdate, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock Text="{x:Bind DataTile.Title, Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Center" />
                    <TextBlock Text="{x:Bind DataTile.FullDescription, Mode=OneWay}" Margin="0,10,0,0" TextWrapping="Wrap" />
                    <HyperlinkButton x:Uid="Tile_SeeMoreDetails" VerticalContentAlignment="Bottom" Margin="0,65,0,0" Tag="{x:Bind DataTile.Tag, Mode=OneWay}" Click="SeeMoreDetailsHyperLinkButton_Click" />
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
